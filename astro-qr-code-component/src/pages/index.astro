---
import Layout from "../layouts/Layout.astro";
import QRCard from "../components/QRCodeCard.astro";

const img = "/image-qr-code.png";
const headText = "Improve your font-end skills by building projects";
const contentText =
  "Scan the QR code to visit Frontend Mentor and take your coding skills to the next level";
---

<Layout title="Hello">
  <main>
    <QRCard {img} {headText} {contentText} />
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
</style>
